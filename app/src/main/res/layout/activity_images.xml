<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagesActivity"
    android:background="@color/orange">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivImage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/tvImages"
        android:id="@+id/tvImagesTitle"
        />

    <ImageView
        android:id="@+id/ivImage1"
        android:layout_height="150dp"
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@id/tvImagesTitle"
        app:layout_constraintBottom_toTopOf="@id/ivImage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/image1"
        />

    <ImageView
        android:id="@+id/ivImage2"
        android:layout_height="150dp"
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@id/ivImage1"
        app:layout_constraintBottom_toTopOf="@id/ivImage3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/image1"
        />

    <ImageView
        android:id="@+id/ivImage3"
        android:layout_height="150dp"
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@id/ivImage2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/image1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>